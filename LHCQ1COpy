public class LongHourCoding {
//main method Class 
    public static void main(String[] args) {
    Scanner sc= new Scanner(System.in);
    System.out.println("Enter the Choice (1 for yes or 0 for No ) Weather You want to Know the basic plan to make a Vechile:- ");
    int Choice=sc.nextInt();
    int Choice_to_Go_Futher;
    int Choice_Of_Vehicle_type;
    int Model_Choice;
    if(Choice ==1){
        Vehicle V1= new Vehicle();
        V1.Raw_Process();
        V1.Body_Constuction();
        V1.Part_Placing();
        V1.Finshing_Work();
        V1.paint_job();
        System.out.println("Wound Like to Know more about this 1 for Yes 0 for No ???");
        Choice_to_Go_Futher=sc.nextInt();
        if(Choice_to_Go_Futher==1){
        System.out.println("Enter the Which Type of Vehicle you Want to Know About. Enter 2 for Two-Wheeler,3 for 3-wheeler,4 for 4-Wheelr  ");  
        Choice_Of_Vehicle_type=sc.nextInt();
        if(Choice_Of_Vehicle_type==2)
        {
            Two_Wheeler T21= new Two_Wheeler();
            System.out.println("Enter the Choice 1 for Premium and 0 for Basic ");
            Model_Choice=sc.nextInt();
            T21.Choice_Of_Model(Model_Choice);
        
        
        }
        else if(Choice_Of_Vehicle_type==3)
        {
            Three_Wheeler TH1= new Three_Wheeler();
            System.out.println("Enter the Choice 1 for Premium and 0 for Basic ");
            Model_Choice=sc.nextInt();
            TH1.Choice_Of_Model(Model_Choice);
        }
        else if(Choice_Of_Vehicle_type==4)
        {
            Four_Wheeler FW1= new Four_Wheeler();
            System.out.println("Enter the Choice 1 for Premium and 0 for Basic ");
            Model_Choice=sc.nextInt();
            FW1.Choice_Of_Model(Model_Choice);

        }
        else {
            System.out.println("Enter a Value for Valid Vehicle Type !!!");
        }
        }

        
    }else if(Choice ==0){
        System.out.println("Thank you for Giving us Your Time");
    }else {
        System.out.println("Enter a valid Response");
    }
    System.out.println("Thank You for Visitng.");
     sc.close();
}    
}
